generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model SessionRecord {
  id                String          @id
  exerciseType      String
  startedAt         DateTime
  endedAt           DateTime?
  averageWpm        Float?
  fillerWordRate    Float?
  eyeContactAverage Float?
  notes             String?
  createdAt         DateTime        @default(now())
  updatedAt         DateTime        @updatedAt
  metrics           SessionMetric[]
}

model SessionMetric {
  id            Int           @id @default(autoincrement())
  sessionId     String
  occurredAt    DateTime
  wordsPerMin   Float?
  fillerRate    Float?
  eyeContactPct Float?
  postureScore  Float?
  payload       String?
  session       SessionRecord @relation(fields: [sessionId], references: [id], onDelete: Cascade)

  @@index([sessionId, occurredAt])
}
